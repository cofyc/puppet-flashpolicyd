<?xml version="1.0" encoding="UTF-8"?>

<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>dev.flashpolicyd</string>

    <key>Boxen</key>
    <dict>
      <key>Description</key>
      <string>Fast caching of any kind of data.</string>

      <key>Port</key>
      <integer><%= scope.lookupvar "flashpolicyd::config::port" %></integer>
    </dict>

    <key>ProgramArguments</key>
    <array>
      <string><%= scope.lookupvar "flashpolicyd::config::executable" %></string>
      <string>--file=<%= scope.lookupvar "flashpolicyd::config::configfile" %></string>
      <string>--port=843</string>
    </array>

    <key>RunAtLoad</key>
    <true />

    <key>KeepAlive</key>
    <true />

    <key>WorkingDirectory</key>
    <string><%= scope.lookupvar "flashpolicyd::config::datadir" %></string>

    <key>StandardErrorPath</key>
    <string><%= scope.lookupvar "flashpolicyd::config::logfile" %></string>

    <key>StandardOutPath</key>
    <string><%= scope.lookupvar "flashpolicyd::config::logfile" %></string>
  </dict>
</plist>
